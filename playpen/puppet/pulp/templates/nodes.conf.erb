#
# # The main node configuration
# # node_certificate - The absolute path to the node SSL certificate
#
[main]
<% if @node_certificate -%>
    node_certificate: <% @node_certificate %>
<% end -%>


# # The oauth configuration used to authenticate to this node
# # user_id - The pulp user ID
[oauth]
<% if @oauth_user_id -%>
    user_id: <%= @oauth_user_id %>
<% end -%>


# # The oauth configuration used to authenticate to the parent node
# # key     - The oauth key
# # secret  - The oauth secret
# # user_id - The pulp user ID
[parent_oauth]
# key:
# secret:
# user_id: admin
<% if @parent_oath_key -%>
    key: <% @parent_oath_key %>
<% end -%>
<% if @parent_oath_secret -%>
    secret: <% @parent_oath_secret %>
<% end -%>
<% if @parent_oath_user_id -%>
    user_id: <% @parent_oath_user_id %>
<% end -%>

